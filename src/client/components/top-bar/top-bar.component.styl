@import "../../app.variables.styl"

logo-width = 200px

bd-top-bar
  .top-bar-container
    background-color color-primary
    height top-bar-height
    width 100%
    z-index 100

    .logo
      height top-bar-height
      width logo-width
      background url("resources/logo.svg")
      background-size 100% (top-bar-height - 20px)
      background-position center center
      background-repeat no-repeat
      margin-left 24px
